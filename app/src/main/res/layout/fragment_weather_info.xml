

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/second"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/secondPage"
        android:layout_alignBottom="@+id/secondPage"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="com.example.chandan.weatherappintermediate.WeatherInfo"
            android:layout_width="match_parent"
            android:id="@+id/secondPage"
            android:layout_height="match_parent">


         <LinearLayout
           android:layout_width="match_parent"
            android:layout_height="match_parent">

             <LinearLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          tools:context="com.example.chandan.weatherappintermediate.WeatherInfo"

          android:layout_width="match_parent"
             android:layout_height="match_parent"

              android:orientation="vertical"
             >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/setCityOnExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="London,"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:textSize="50sp"
            android:textAppearance="@android:style/TextAppearance.Large"
            />
        <TextView
            android:id="@+id/setCountryOnExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="UK"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:textSize="50sp"
            android:textAppearance="@android:style/TextAppearance.Large"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/futureDateid"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="24th june,2017"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColorHighlight="#F0F4C3"
            android:textColor="#F0F4C3"
            />

        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold|italic"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColorHighlight="#F0F4C3"
        android:textColor="#F0F4C3"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:id="@+id/futdesc"
        android:text="desc"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="53dp"
            android:layout_margin="10dp"
            android:src="@drawable/arrowupred"/>

            
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/setMax"
            android:textSize="32sp"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColorHighlight="#F0F4C3"
            android:textColor="#F0F4C3"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:text="23"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bluearrow"
            android:layout_margin="10dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/setMin"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColorHighlight="#F0F4C3"
            android:textColor="#F0F4C3"
            android:textStyle="bold"
            android:textSize="32sp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="27"
            />

    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:weightSum="1">



            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textStyle="bold|italic"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColorHighlight="#F0F4C3"
            android:textColor="#F0F4C3"
            android:textSize="25sp"
            android:id="@+id/mor"
            android:text="Morning"
            android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="125"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHighlight="#F0F4C3"
                android:textColor="#F0F4C3"
                android:textSize="22sp"
                android:id="@+id/setMorningTemp"
                android:paddingLeft="5dp"
                android:layout_weight="0.47"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:id="@+id/day"
            android:textStyle="bold|italic"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColorHighlight="#F0F4C3"
            android:textColor="#F0F4C3"
            android:textSize="25sp"
            android:paddingRight="5dp"/>
            <TextView
            android:layout_width="match_parent"
            android:id="@+id/setDayTemp"
            android:layout_height="wrap_content"
            android:text="125"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColorHighlight="#F0F4C3"
            android:textColor="#F0F4C3"
            android:textSize="22sp"
            android:paddingLeft="35dp"/>


        </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold|italic"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHighlight="#F0F4C3"
                android:textColor="#F0F4C3"
                android:textSize="25sp"
                android:id="@+id/eve"
                android:text="Evening"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setEveningTemp"
                android:text="125"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHighlight="#F0F4C3"
                android:textColor="#F0F4C3"
                android:textSize="22sp"
                android:paddingLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night"
                android:textStyle="bold|italic"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHighlight="#F0F4C3"
                android:textColor="#F0F4C3"
                android:id="@+id/nig"
                android:textSize="25sp"
                android:paddingRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="125"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHighlight="#F0F4C3"
                android:textColor="#F0F4C3"
                android:textSize="22sp"
                android:id="@+id/setNightTemp"
                android:paddingLeft="35dp"/>


        </LinearLayout>
    </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="More Info"
    android:layout_marginLeft="20dp"
    android:id="@+id/moreinfo"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:textSize="30sp"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    android:paddingTop="50dp"
    android:paddingBottom="10dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:scaleType="fitXY"
                android:src="@drawable/humidity"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/hum"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHighlight="#F0F4C3"
                android:textColor="#F0F4C3"
                android:textSize="25sp"
                android:text="HUMIDITY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:id="@+id/setHumidity"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHighlight="#F0F4C3"
                android:textColor="#F0F4C3"
                android:textSize="20sp"
                android:text="100%"/>

            </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:scaleType="center"
                android:src="@drawable/clouds"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColorHighlight="#F0F4C3"
                android:textColor="#F0F4C3"
                android:textAlignment="center"
                android:id="@+id/clo"
                android:textSize="25sp"
                android:text="CLOUDINESS"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:textSize="20sp"
                android:text="100%"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColorHighlight="#F0F4C3"
                android:textColor="#F0F4C3"
                android:layout_gravity="center"
                android:id="@+id/setClouds"/>

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:scaleType="fitXY"
                    android:src="@drawable/rainicon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColorHighlight="#F0F4C3"
                    android:textColor="#F0F4C3"
                    android:id="@+id/rai"
                    android:textSize="25sp"
                    android:text="RAIN(in mm)"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/setRain"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColorHighlight="#F0F4C3"
                    android:textColor="#F0F4C3"
                    android:textSize="20sp"
                    android:text="100%"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:scaleType="center"
                    android:src="@drawable/pressuremdpi"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColorHighlight="#F0F4C3"
                    android:textColor="#F0F4C3"
                    android:textAlignment="center"
                    android:id="@+id/prs"
                    android:textSize="25sp"
                    android:text="PRESSURE"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:textSize="20sp"
                    android:text="100%"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColorHighlight="#F0F4C3"
                    android:textColor="#F0F4C3"
                    android:layout_gravity="center"
                    android:id="@+id/setPressure"/>

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:scaleType="center"
                    android:src="@drawable/wind"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColorHighlight="#F0F4C3"
                    android:textColor="#F0F4C3"
                    android:id="@+id/winsp"
                    android:textSize="25sp"
                    android:text="WIND SPEED"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:id="@+id/setWindSpeed"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColorHighlight="#F0F4C3"
                    android:textColor="#F0F4C3"
                    android:textSize="20sp"
                    android:text="100%"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:scaleType="center"
                    android:src="@drawable/windangle"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:textStyle="bold"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColorHighlight="#F0F4C3"
                    android:textColor="#F0F4C3"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:id="@+id/winan"
                    android:text="WIND ANGLE"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:textSize="20sp"
                    android:text="100%"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColorHighlight="#F0F4C3"
                    android:textColor="#F0F4C3"
                    android:layout_gravity="center"
                    android:id="@+id/setWindAngle"/>

            </LinearLayout>

        </LinearLayout>





</LinearLayout>
           </LinearLayout>
        </LinearLayout>
        </ScrollView>
        </RelativeLayout>




